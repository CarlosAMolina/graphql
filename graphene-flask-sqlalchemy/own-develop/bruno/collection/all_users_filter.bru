meta {
  name: all_users_filter
  type: graphql
  seq: 3
}

post {
  url: {{protocol}}://{{domain}}:{{port}}/{{path}}
  body: graphql
  auth: none
}

body:graphql {
  {
    allUsersFilter(name: "Al") {
      edges {
        node {
          id,
          name,
          age,
          creationDateTime
        }
      }
    }
  }
}

assert {
  res.status: eq 200
  res.body.data.allUsersFilter.edges.length: eq 1
  res.body.data.allUsersFilter.edges[0].node.name: eq Al
}
